---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: logicapp
  namespace: dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: logicapp
  template:
    metadata:
      labels:
        app: logicapp
    spec:
      hostname: logicapp
      containers:
      - name: logicapp
        image: eu.gcr.io/PROJECTID/logicapp:CONTAINERTAG
        ports:
        - containerPort: 5002
        args: ['0.0.0.0', '5002','http://queryapp.dev.svc:5003/query/yml_data']
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: logicapp
  labels:
    app: logicapp
  namespace: dev
spec:
  ports:
  - port: 5002
    protocol: TCP
  selector:
    app: logicapp
---
